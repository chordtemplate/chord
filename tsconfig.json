{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "lib": ["esnext"],
    "module": "esnext",
    "target": "esnext",

    "moduleResolution": "bundler",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",

    "allowJs": true,
    "esModuleInterop": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
