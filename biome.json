{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"ignore": ["./dist"]
	},
	"linter": {
		"ignore": ["./dist"],
		"rules": {
			"correctness": {
				"noVoidTypeReturn": "error"
			},
			"complexity": {
				"noUselessCatch": "error",
				"useFlatMap": "error",
				"noUselessEmptyExport": "error",
				"noUselessRename": "error",
				"noUselessSwitchCase": "error"
			},
			"performance": {
				"noDelete": "error"
			},
			"suspicious": {
				"noDoubleEquals": "error"
			}
		}
	}
}
